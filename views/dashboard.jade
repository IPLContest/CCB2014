doctype html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Everest Premier League - My Dashboard
    meta(content='no-cache', http-equiv='cache-control')
    meta(content='IPL Contest, IPL, Cricket, match', name='keywords')
    meta(content='IPL Contest, IPL, Cricket, match', name='description')
    meta(name='msvalidate.01', content='to be filled in')
    meta(name='verify-v1', content='to be filled in')
    link(href='Page URL - TBD by backend', rel='canonical')
    link(href='/stylesheets/global.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/main.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
    script(type='text/javascript', src='/javascripts/home.js')
  body
    #content_container_main 
      #header
        .primaryMenu1
        #logo
          img(src="images/EPL_logo.jpg" class="cartwheellogo")
          #logoText Everest Premier League
        .primaryMenu
          ul
            li
              a(href='home') Home
            li
              a(href='userpoints') Participants Statistics
            li
              a(href='rules') Rules
            if loggedin == "true"
             li
              a(href='myDashboard') My Dashboard
             li
              a(href='feedback') Feedback
          .userInfo
            if record != null
              label #{record.first_name} &nbsp;
              | |
              a.signout(href='signout') &nbsp;Sign Out
      #userprofile
        img(src='images/user_icon.jpg')
        .section1
            .sectionheader
              | #{record.first_name} #{record.last_name}
            .sectionbody
              table
               thead
                 tr
                  th  Match
                  th  My Winner
                  th  My MOM
                  th  Actual Winner
                  th  Actual MOM
                  th  Match Points
                  th  MOM Points
                  th  Bonus Points
               tbody
                 - each item in dashboard
                  tr
                   td= item.match
                   td= item.predictTeam
                   td= item.predictMoM
                   td= item.winnerTeam
                   td= item.winnerMoM
                   td= item.matchPoints
                   td= item.momPoints
                   td= item.bonusPoints
    
        