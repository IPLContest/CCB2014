doctype html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title IPL Contest
    meta(content='no-cache', http-equiv='cache-control')
    meta(content='IPL Contest, IPL, Cricket, match', name='keywords')
    meta(content='IPL Contest, IPL, Cricket, match', name='description')
    meta(name='msvalidate.01', content='to be filled in')
    meta(name='verify-v1', content='to be filled in')
    link(href='Page URL - TBD by backend', rel='canonical')
    link(href='/stylesheets/global.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/main.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js') 	
    script(type='text/javascript', src='/javascripts/home.js')
    script(type='text/javascript', src='/javascripts/main.js')
  body
    #content_container_main
       #header
        .primaryMenu1
        #logo TARGET PREMIER LEAGUE
        .text
          label Powered by
          img(src='images/cartwheel-logo.png', width='175px')
        .primaryMenu
          ul
            li
              a(href='home') Home
            li
              a(href='userpoints') Participants Statistics
            li
              a(href='rules') Rules
          .userInfo
            if record != null
              label #{record.first_name} &nbsp;
              | |
              a.signout(href='signout') &nbsp;Sign Out
if status == "success"
  each matchinfo, i in match
    form(action='javascript:void(0)', method='POST')
      input(type='hidden', value='#{matchinfo.match_id}',id='matchid', name='matchid')
      input(type='hidden', value='0', id='player', name='player') 
      .mainContainer
        .matchSection
          .matchHeader
            .top
              | Match #{matchinfo.match_id}
            .teamSelectionlabel
              label Please predict Winner
            .eventCompetitors
              .teamlogo
                input(type='radio', radio='radio', value='#{matchinfo.teams[0]._id}', name='team') 
                label #{matchinfo.teams[0].team_title}
                .tLogo50x(class="#{matchinfo.teams[0].team_css_name}")
              h5 VS
              .teamlogo
                input(type='radio', radio='radio', value='#{matchinfo.teams[1]._id}', name='team')
                label #{matchinfo.teams[1].team_title}
                .tLogo50x(class="#{matchinfo.teams[1].team_css_name}")
            .matchtime
              p.matchDate 2:30pm GMT (8:00pm IST), Wednesday 16th April 2014 
          .matchFooter
            .bottom
            .momlabel
              label Please select Man of the Match
            .momsection
              .playerListDropDown
                a.selection(href='javascript:void(0)')
                  label Select a player
                  span
                ul
                  each team1, j in matchinfo.teams
                        each player, k in team1.players
                           li
                             a(data-team-id='#{player.player_id}', href='javascript:void(0)') #{player.name}
          .matchFooterPredict
            .error_msg
              label#err_msg_label			
            .mombutton
              button#Predict-btn.Predict-btn(type='submit') Predict Winners
          .matchSectionMain
            .teamlogo1
              .tLogo100x(class="#{matchinfo.teams[0].team_css_name}")
              img(src='images/#{matchinfo.teams[0].team_image}')
            .teamlogo2
              .tLogo100x(class="#{matchinfo.teams[1].team_css_name}")
              img(src='images/#{matchinfo.teams[1].team_image}')
   .sideSection
      .section1
        .sectionheader
          | TOP RANKERS
        .sectionbody
          ul
    #footer
      .footerdata
        .footersection
          img(src='images/24ipl.jpg')
        .footersection
          ul
            li.Bold Quick Links
            li Home
            li Participants Statistics
            li Match Statistics
        .footersection
          ul
            li.Bold Teams
            li Mumbai Indians
            li Chennai Super Kings
            li Delhi Daredevils
            li Kings X1 Punjab
            li Kolkata Knight Riders
            li Rajasthan Royals
            li Delhi Daredevils
            li Delhi Daredevils
        .footersection
          ul
            li.Bold Quick Links
            li Home
            li Participants Statistics
            li Match Statistics
      .clearline
      .footerbottom
        label Target Premier League | 
        label Powered by Cartwheel 
else
   br
   br
   img(class='comingsoon',src='images/cs.jpg')
   .bodyTextBig
     p Predict,Win & Have Fun!