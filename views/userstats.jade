doctype html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Approve Offer
    meta(content='no-cache', http-equiv='cache-control')
    meta(content='IPL Contest, IPL, Cricket, match', name='keywords')
    meta(content='IPL Contest, IPL, Cricket, match', name='description')
    meta(name='msvalidate.01', content='to be filled in')
    meta(name='verify-v1', content='to be filled in')
    link(href='Page URL - TBD by backend', rel='canonical')
    link(href='/stylesheets/global.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/main.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
    script(type='text/javascript', src='/javascripts/home.js')
  body
    #content_container_main
      #header
        .primaryMenu1
        #logo
          img(src="images/EPL_logo.jpg" class="cartwheellogo")
          #logoText Everest Premeier League
        .primaryMenu
          ul
            li
              a(href='home') Home
            li
              a(href='userpoints') Participants Statistics
            li
              a(href='rules') Rules
          .userInfo
            if record != null
              label #{record.first_name} &nbsp;
              | |
              a.signout(href='javscript:void(0)') &nbsp;Sign Out
      .userstatsSection
        .section1
          .sectionheader
            | TOP RANKERS
          .sectionbody
            table
              thead
                tr
                  th Name
                  th Points
              tbody
              each userpoint, i in points
                tr
                  td #{userpoint.first_name} #{userpoint.last_name}
                  td #{userpoint.totalPoints}
